div.videos td.delete a {
  border: 0;
}

div.videos table {
  font-size: 15px;
}

a.no_favorite {
  display: block;
  float: left;
  margin: 0 10px 0 5px;
  width: 20px;
  height: 20px;
  background: url(<%= asset_path("favorite.png") %>) no-repeat bottom;
}

a.no_favorite:hover {
  background-position: top;
  border: none;
}

a.favorite {
  display: block;
  float: left;
  margin: 0 10px 0 5px;
  width: 20px;
  height: 20px;
  background: url(<%= asset_path("favorite.png") %>) no-repeat top;
}

a.favorite:hover {
  background-position: bottom;
  border: none;
}

#pages {
  float: left;
  margin: 10px 5px;
}

#results {
  float: right;
  margin: 10px 5px;
}

#pages strong, #results strong {
  margin-right: 5px;
}

h3#log_heading {
  margin: 0;
  padding: 10px;
}

h3#log_heading span {
  font-size: 16px;
  font-weight: normal;
  padding-left: 10px;
}
@import 'variables';

body {
  margin: 0;
  padding: 0;
  font-family: 'Trebuchet MS', Arial, serif;
  color: $color;
  background: $bgcolor;
}

#wrapper {
  width: $site_width;
  margin: 20px auto 20px auto;
}

#inner_wrapper {
  width: $inner_width;
  float: right;
  background-color: $lightbgcolor;
  padding: $inner_padding;
  margin-bottom: 20px;
}

#sidebar {
  position: $sidebar_pos;
  width: $sidebar_width;
  background-color: $lightbgcolor;
  padding: $sidebar_padding;
  font-size: 12px;
  border-right: 1px solid $lightestbgcolor;
}

.side-controls {
  position: fixed;
  top: 70px;
  left: 50%;
  margin-left: $site_width / 2;
  padding: $sidebar_padding;
  background-color: $lightbgcolor;
  width: 250px;
  border-left: 1px solid $lightestbgcolor;
}

.side-controls input {
    margin: 3px 0;
}

#stats-controls {
  width: 200px;
}

#stats-controls li {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

#page_title {
  margin-left: $sidebar_width + 2 * $sidebar_padding + $inner_padding + 1;
}

#loading {
  margin-left: ($sidebar_width + 2 * $sidebar_padding) / 2 - 24;
  margin-top: -10px;
  width: 48px;
  height: 48px;
  background-image: url(<%= asset_path 'loading.svg' %>);
}

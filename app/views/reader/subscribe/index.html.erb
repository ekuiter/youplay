<%= render 'reader/reader/reader_head' %>

<h3><%= t('reader.subscribe.channels') %></h3>

<p id="options"><%= link_to t('reader.subscribe.delete_all'), reader_delete_channel_path, method: :delete, confirm: t('confirm')  %></p>

<%= render "subscribe" %>
   
<div id="subscribe">
  <% if @subscribed_channels.blank? %>
      <p><%= t('reader.subscribe.no_channels') %></p>
  <% else %>
      <table class="striped">
        <tr>
          <th><%= t("video_list.channel_topic") %></th>
        </tr>
        <% @subscribed_channels.reverse.each do |channel| %>
        <tr>
          <td>
            <%= ajax_channel 'youtube', channel.channel, 'span' %>
          </td>
          <td style="width:20px">
            <%= link_to image_tag("delete.png", width: 16, height: 16), reader_delete_channel_path(channel), method: :delete, confirm: t('confirm') %>
          </td>
        </tr>
        <% end %>
      </table>
  <% end %>
</div>
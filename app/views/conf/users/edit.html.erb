<% @action_name = t 'conf.users.edit', user: @user.username %>

<%= render 'conf/conf/conf_head' %>

<%= form_for @user, url: conf_user_path do |f| %>
    <%= error_messages! @user %>
    <table>

      <tr>
        <td><%= f.label :full_name, t('devise.full_name') %></td>
        <td><%= f.text_field :full_name %></td>
      </tr>
      <%= set_focus_to 'user_full_name' %>

      <tr>
        <td><%= f.label :email, t('devise.email') %></td>
        <td><%= f.email_field :email %></td>
      </tr>

      <tr>
        <td><%= f.label :password, t('devise.password') %></td>
        <td><%= f.password_field :password, :autocomplete => "off" %></td>
        <td><i><%= t 'devise.password_blank' %></i></td>
      </tr>

      <tr>
        <td><%= f.label :password_confirmation, t('devise.password_confirmation') %></td>
        <td><%= f.password_field :password_confirmation %></td>
      </tr>

      <tr>
        <td><%= f.label :admin, t('conf.users.admin') %></td>
        <td><% if @user == current_user %><%= f.check_box :admin, disabled: true %><% else %><%= f.check_box :admin %><% end %></td>
      </tr>

      <tr>
        <td></td>
        <td><%= f.submit t('devise.save') %></td>
      </tr>

    </table>
<% end %>

<h3><%= t 'conf.users.delete' %></h3>

<p><%= t 'conf.users.delete_warning' %> <%= link_to link_to t('conf.users.delete'), conf_user_path(@user), method: :delete, confirm: t('confirm') %>.</p>
<%= render 'conf/conf/conf_head' %>

<%= form_for @person, url: conf_person_path do |f| %>
    <%= error_messages! @person %>
    <table>
      <tr>
        <td><%= f.label :name %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <%= set_focus_to 'person_name' %>
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit t('devise.save') %></td>
      </tr>
    </table>
<% end %>

<p><%= link_to t('conf.people.delete'), conf_person_path(@person), method: :delete, confirm: t('confirm') %></p>
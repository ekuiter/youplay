<%= render 'conf/conf/conf_head' %>

<div class="side-controls">
  <ul>
    <li><%= link_to t('conf.categories.new'), new_conf_category_path %></li>
    <li><%= link_to t('conf.categories.quick'), conf_quick_path %></li>
  </ul>
</div>

<% if @categories.empty? %>
    <p><%= t 'conf.categories.no_categories_found' %></p>
<% else %>
<table class="wide striped">
  <tr>
    <th><%= t 'conf.categories.name' %></th>
    <th style="width:60px"></th>
  </tr>
  <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, edit_conf_category_path(category) %></td>
        <td><%= link_to image_tag('edit.png'), edit_conf_category_path(category), class: :noborder %>
        <%= link_to image_tag('delete.png'), conf_category_path(category), method: :delete, confirm: t('confirm'), class: :noborder %></td>
      </tr>
  <% end %>
</table>
<% end %>

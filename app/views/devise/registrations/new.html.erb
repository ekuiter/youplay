<%= title t("devise.register") %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <table>

      <tr>
        <td><%= f.label :username, t("devise.username") %></td>
        <td><%= f.text_field :username %></td>
      </tr>
      <%= set_focus_to "user_username" %>

      <tr>
        <td><%= f.label :full_name, t("devise.full_name") %></td>
        <td><%= f.text_field :full_name %></td>
      </tr>

      <tr>
        <td><%= f.label :email, t("devise.email") %></td>
        <td><%= f.email_field :email %></td>
      </tr>

      <tr>
        <td><%= f.label :password, t("devise.password") %></td>
        <td><%= f.password_field :password %></td>
      </tr>

      <tr>
        <td><%= f.label :password_confirmation, t("devise.password_confirmation") %></td>
        <td><%= f.password_field :password_confirmation %></td>
      </tr>

      <tr>
        <td></td>
        <td><%= f.submit t("devise.register") %></td>
      </tr>

    </table>
<% end %>

<%= render :partial => "devise/shared/links" %>

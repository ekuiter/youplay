<% @action_name = t "devise.edit_account" %>

<%= render "conf/conf/conf_head" %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>
    <table>

      <tr>
        <td><%= f.label :full_name, t("devise.full_name") %></td>
        <td><%= f.text_field :full_name %></td>
      </tr>
      <%= set_focus_to "user_full_name" %>

      <tr>
        <td><%= f.label :email, t("devise.email") %></td>
        <td><%= f.email_field :email %></td>
      </tr>

      <tr>
        <td><%= f.label :password, t("devise.password") %></td>
        <td><%= f.password_field :password, :autocomplete => "off" %></td>
        <td><i><%= t "devise.password_blank" %></i></td>
      </tr>

      <tr>
        <td><%= f.label :password_confirmation, t("devise.password_confirmation") %></td>
        <td><%= f.password_field :password_confirmation %></td>
      </tr>

      <tr>
        <td><%= f.label :current_password, t("devise.current_password") %></td>
        <td><%= f.password_field :current_password %></td>
        <td><i><%= t "devise.confirm_changes" %></i></td>
      </tr>

      <tr>
        <td></td>
        <td><%= f.submit t("devise.save") %></td>
      </tr>

    </table>
<% end %>

<h3><%= t "devise.cancel_account" %></h3>

<p><%= t "devise.unhappy" %> <%= link_to t("devise.cancel_account"), registration_path(resource_name), confirm: t("confirm"), method: :delete %>.</p>
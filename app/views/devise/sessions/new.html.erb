<%= title t('devise.login') %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <table>

      <tr>
        <td><%= f.label :username, t('devise.username') %></td>
        <td><%= f.text_field :username %></td>
      </tr>
      <%= set_focus_to 'user_username' %>

      <tr>
        <td><%= f.label :password, t('devise.password') %></td>
        <td><%= f.password_field :password %></td>
      </tr>

      <% if devise_mapping.rememberable? -%>
          <tr>
            <td></td>
            <td><%= f.check_box :remember_me %> <%= f.label :remember_me, t('devise.remember_me') %></td>
          </tr>
      <% end -%>

      <tr>
        <td></td>
        <td><%= f.submit t('devise.login') %></td>
      </tr>

    </table>
<% end %>

<%= render :partial => 'devise/shared/links' %>
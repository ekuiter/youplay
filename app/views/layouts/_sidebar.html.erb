<%= link_to image_tag("logo.png",  width: 80, height: 80), root_path, class: :noborder %>

<% if user_signed_in? %>
    <div id="user_nav">
      <%= t 'sidebar.user_nav.logged_in_as' %>
      <br/>
      <span class="username">
        <%= current_user.full_name %>
      </span>
      <%= link_to t('sidebar.user_nav.logout'), destroy_user_session_path, method: :delete %>
    </div>

    <div id="modules_nav">
      <ul id="modules">
        <% modules.each do |module_name, module_path| %>
            <li><%= nav_link_to module_name, module_path %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<%= link_to t('imprint'), Settings.imprint, target: :_blank %>

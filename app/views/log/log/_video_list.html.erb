<% if @videos.empty? %>
    <%= t 'video_list.no_videos_found' %>
<% else %>
    <div class="videos">
      <table class="wide striped">
        <tr>
          <th></th>
          <th><%= t 'video_list.date' %></th>
          <th><%= t 'video_list.title' %></th>
          <th><%= t 'video_list.channel_topic' %></th>
          <th><%= t 'video_list.duration' %></th>
        </tr>
        <% @videos.each do |video| %>
            <tr>
              <td><%= image_tag "#{video.provider}.png" %></td>
              <td><%= l video.created_at, format: :short %></td>
              <td class="title"><%= link_to video.title[0..@title_length].html_safe+(video.title.length > @title_length ? "..." : ""), video.play_url %></td>
              <td class="ajax-user channel" data-user="<%= video.provider %>:<%= video.channel_topic %>"><%= image_tag "loading-small.gif" %></td>
              <td><%= video_duration video %></td>
              <td class="delete"><%= favorited = @favorited_video_ids.include?(video.id); link_to "", void, class: (favorited ? :favorite : :no_favorite), method: (favorited ? :delete : :get), "data-url" => log_set_favorite_path(video) %>
                <%= link_to image_tag('delete.png', width: 20, height: 20), log_delete_video_path(video), method: :delete, confirm: t('confirm') %></td>
            </tr>
        <% end %>
      </table>
    </div>
<% end %>